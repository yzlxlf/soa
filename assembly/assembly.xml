<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2          http://maven.apache.org/xsd/assembly-1.1.2.xsd">    <id>assembly-package</id>    <formats>        <format>war</format>    </formats>    <fileSets>        <fileSet>            <directory>${basedir}/../conf/config</directory>            <includes>                <include>**/*.properties</include>            </includes>            <excludes>                <exclude>**/*.xml</exclude>            </excludes>            <outputDirectory>WEB-INF/config</outputDirectory>        </fileSet>        <fileSet>            <directory>${basedir}</directory>        </fileSet>    </fileSets></assembly>